<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:id="@+id/rl_cast_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sdv_cast_image"
            android:background="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_tranparent_gradient"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cast_name"
            android:text="Title"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:alpha="0.8"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As"
        android:textSize="9sp"
        android:layout_marginTop="5dp"
        android:alpha="0.7"
        android:layout_below="@+id/rl_cast_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_string_character_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="11sp"
        android:alpha="0.7"
        android:id="@+id/tv_character_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_string_character_name"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:padding="10dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_review"
        android:layout_toRightOf="@+id/iv_left_quote"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="13sp"
            android:id="@+id/tv_review"
            android:layout_margin="10dp"
            android:maxWidth="250dp"
            android:maxLines="4"
            android:gravity="center"
            android:text="asldjasjda jakhdkajshdkajshd akjsdhaksjdha"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:textSize="11sp"
            android:text="-Shishir"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_review_author"
            android:maxWidth="300dp"
            android:maxLines="4"
            android:gravity="right"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/iv_left_quote"
        app:srcCompat="@drawable/ic_left_quotes_sign"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:baselineAlignBottom="true"
        android:layout_alignBottom="@+id/ll_review"
        android:layout_marginLeft="10dp"
        android:scaleY="-1"
        android:scaleX="-1"
        android:layout_toRightOf="@+id/ll_review"
        app:srcCompat="@drawable/ic_left_quotes_sign"/>
</RelativeLayout>